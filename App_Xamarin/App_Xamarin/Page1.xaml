<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Xamarin.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="20" CornerRadius="0">
                <Label Text="Bem vindo ao calculo do IMC" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Entry x:Name="txtNome" Placeholder="Nome" />
            <Entry x:Name="txtIdade" Placeholder="Idade" Keyboard="Numeric" />
            <Entry x:Name="txtPeso" Placeholder="Peso (kg)" Keyboard="Numeric" />
            <Entry x:Name="txtAltura" Placeholder="Altura (metros)" Keyboard="Numeric" />

            <Button Text="Calcular IMC" Clicked="CalcularIMC_Clicked" />

            <Label x:Name="lblIMC" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
