    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Xamarin.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bem vindo ao gerador de emails" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtNome" Placeholder="Digite seu nome" />
        <Entry x:Name="txtSobrenome" Placeholder="Digite seu sobrenome" />
        <Button Text="Gerar Email" Clicked="GerarEmailClicked" />
        <Label x:Name="lblEmail" />
        <Button Text="Ir para Pagina do IMC" Clicked="IrParaPage1Clicked" />

    </StackLayout>

</ContentPage>
